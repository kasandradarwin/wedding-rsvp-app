<div id="<%= dom_id guest %>">
  <p>
    <strong>First name:</strong>
    <%= guest.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= guest.last_name %>
  </p>

  <p>
    <strong>Plus one:</strong>
    <%= guest.plus_one %>
  </p>

  <p>
    <strong>Guest first name:</strong>
    <%= guest.guest_first_name %>
  </p>

  <p>
    <strong>Guest last name:</strong>
    <%= guest.guest_last_name %>
  </p>

</div>
